<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="u4w3d5pu">
        <!-- Il persistence unit ci serve per configurare la connessione a uno specifico db -->
        <class>daviderocca.entities.Testo</class>
        <class>daviderocca.entities.Libro</class>
        <class>daviderocca.entities.Rivista</class>
        <class>daviderocca.entities.Utente</class>
        <class>daviderocca.entities.Prestito</class>
        <!-- Serve specificare l'elenco delle entities con tanto di package -->
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/catalogo_bibliografico"/>
            <!-- Dopo l'ultimo slash inserisco il nome del database al quale voglio collegarmi (IL DB DEVE ESISTERE PERO') -->
            <property name="javax.persistence.jdbc.user" value="daviderocca"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- Quest'ultima impostazione serve per chiedere a Hibernate di crearci le tabelle se non esistono ancora
            oppure se esistono aggiornarle se necessario -->
        </properties>
    </persistence-unit>
</persistence>